<%-include('includes/header') %>

<div class="container ">
    <div class="row page-title">
        <div class="col-md-12">
            <h1 class="text-center">Characters</h1>
        </div>
    </div>


    <div class="row justify-content-between">
        <% characters.forEach(element => { %>
         <div class="col-lg-4 col-md-6 character-card">
             <a href="/characters/<%- element.name %> ">
                <img src="/images/<%- element.image %> " alt="">
            </a>
             <h3><%- element.name %> </h3>
         </div>
        <% }) %>
    </div>
</div>
<%-include('includes/footer') %>
