<%-include('../includes/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Add New Game</h1>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <form action="/api/games" method="POST" enctype="multipart/form-data">
                <div class="form-group mt-3">
                    <label for="title">*Title:</label>
                    <input type="text" name="title" id="title" class="form-control" required>
                </div>
                <div class="form-group mt-3">
                    <label for="console">Console:</label>
                    <input type="text" name="console" id="console" class="form-control" >
                </div>
                <div class="form-group mt-3">
                    <label for="year">Year:</label>
                    <input type="text" name="year" id="year" class="form-control" >
                </div>
                <div class="form-group mt-3">
                    <label for="article">Article:</label>
                    <textarea name="article" id="article" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="image">*Image:</label>
                    <input type="file" name="image" id="image" class="form-control" required>
                </div>
                <div class="text-center mt-5">
                    <button class="btn btn-outline-success">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>
<%-include('../includes/footer') %>
